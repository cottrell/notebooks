all:
	cat Makefile

install:
	# NOTE: npm is official but bun seems to just pull and it ships with codex so you often end up with bun path first anyway
	# npm install -g @openai/codex
	bun install -g @openai/codex@latest

uninstall:
	# npm uninstall codex
	bun uninstall codex

update:
	# npm install -g @openai/codex@latest
	bun install -g @openai/codex@latest
